# $HOME/.local/share/chezmoi/.gitattributes
# Default to LF for all text files
* text=auto eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.fish text eol=lf

# Lua configs (Neovim, WezTerm)
*.lua text eol=lf

# Other common config formats
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.json text eol=lf
*.md text eol=lf

# Windows-specific files can use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf
*.cmd text eol=crlf
